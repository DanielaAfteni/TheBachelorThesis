<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.EachFlashLearnVoicePage"
             Title="EachFlashLearnVoicePage">
    <ScrollView>
        <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
            <Grid Padding="30,0">
                <!-- Page Header -->
                <StackLayout Grid.Column="0" Orientation="Horizontal">
                    <!-- Back -->
                    <Label Text="Back"
                    VerticalOptions="Center"
                    FontFamily="Inter"
                    FontSize="16"
                    TextDecorations="Underline"
                    TextColor="#5DB075">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding GoBackCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                    <!-- Flashcard -->
                    <Label Text="{Binding Title}" 
                    HorizontalOptions="CenterAndExpand"
                    FontFamily="Inter"
                    FontSize="30"
                    FontAttributes="Bold"
                    TextColor="#000000" />
                    <!-- Log Out -->
                    <Label Text="Log Out" 
                    VerticalOptions="Center"
                    FontFamily="Inter"
                    FontSize="16"
                    TextDecorations="Underline"
                    TextColor="#5DB075">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding LogOutCommand}"/>
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>
            </Grid>

            <Grid>
                <Grid.RowDefinitions>
                    <!-- Header Row -->
                    <RowDefinition Height="Auto" />
                    <!-- Questions -->
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Header Label -->
                <Label Text="Questions"
                Grid.Row="0"
                HorizontalOptions="Center"
                FontFamily="Inter"
                FontSize="24"
                FontAttributes="Bold"
                TextColor="#000000" />
            </Grid>

            <!-- Bind to a collection of questions -->
            <CollectionView Grid.Row="1"
        ItemsSource="{Binding Flashcards}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="30,0">
                            <!-- Flashcards Section -->
                            <Frame BackgroundColor="#E5E5E5"
                           WidthRequest="320"
                           HeightRequest="175"
                           Margin="0,0,0,20"
                           Padding="30,0">
                                <!-- Content for Flashcards Section -->
                                <Grid VerticalOptions="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <!-- Row for Flashcards label -->
                                        <RowDefinition Height="Auto" />
                                        <!-- Row for Click me button -->
                                    </Grid.RowDefinitions>

                                    <!-- Flashcards label -->
                                    <Label Text="{Binding Question}"
                                        HorizontalOptions="CenterAndExpand"
                                        FontFamily="Inter"
                                        FontSize="20"
                                        FontAttributes="Bold"
                                        VerticalOptions="Center"
                                        TextColor="#000000"
                                        Grid.Row="0"
                                        Margin="0,0,0,0" />
                                    <Label Text="{Binding Answer}"
                                        HorizontalOptions="CenterAndExpand"
                                        FontFamily="Inter"
                                        FontSize="20"
                                        FontAttributes="Bold"
                                        VerticalOptions="Center"
                                        TextColor="#000000"
                                        Grid.Row="1"
                                        Margin="0,0,0,0" />
                                </Grid>
                            </Frame>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <StackLayout>
                <!-- Display the title of the set -->
                <Label Text="{Binding Title}" />

                <!-- Display each flashcard in a CollectionView -->
                <CollectionView ItemsSource="{Binding Flashcards}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <!-- Display question and answer of each flashcard -->
                            <StackLayout>
                                <Label Text="{Binding Question}" />
                                <Label Text="{Binding Answer}" />
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>